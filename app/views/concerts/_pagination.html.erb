<% if current_page == 1 %>
    <div class="text-center">
      <ul class="pagination pagination-lg">
        <li class="disabled"><a href="#">&laquo;</a></li>
        <li class="active"><a href="/search/<%= @search.url_safe_term %>/1">1</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/2">2</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/3">3</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/4">4</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/5">5</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/2">&raquo;</a></li>
      </ul>
    </div>
<% elsif current_page == 2 %>
    <div class="text-center">
      <ul class="pagination pagination-lg">
        <li><a href="/search/<%= @search.url_safe_term %>/1">&laquo;</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/1">1</a></li>
        <li class="active"><a href="/search/<%= @search.url_safe_term %>/2">2</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/3">3</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/4">4</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/5">5</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/3">&raquo;</a></li>
      </ul>
    </div>
<% else %>
    <div class="text-center">
      <ul class="pagination pagination-lg">
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page - 1 %>">&laquo;</a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page - 2 %>"><%= current_page - 2 %></a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page - 1 %>"><%= current_page - 1 %></a></li>
        <li class="active"><a href="/search/<%= @search.url_safe_term %>/<%= current_page %>"><%= current_page %></a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page + 1 %>"><%= current_page + 1 %></a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page + 2%>"><%= current_page + 2 %></a></li>
        <li><a href="/search/<%= @search.url_safe_term %>/<%= current_page + 1 %>">&raquo;</a></li>
      </ul>
    </div>
<% end %>